        "#上辺：10cm\n",
        "#下辺：20cm\n",
        "#高さ：5cm\n",
        "\n",
        "#公式：台形の面積 =（上辺＋下辺）× 高さ ÷ 2\n",
        "\n",
        "upperside = 10\n",
        "downside = 20\n",
        "height = 5\n",
        "\n",
        "calculation = (upperside + downside) * height / 2\n",
        "\n",
        "print(f\"与えられた台形の面積は{calculation}㎠\")\n",
        "\n"
